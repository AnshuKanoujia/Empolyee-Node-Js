extends ./../../layout/user-layout

block content
      #page-wrapper
            .row.page-titles
                .col-md-5.align-self-center
                    h3.text-themecolor Technician
                .col-md-7.align-self-center
                    ol.breadcrumb
                        li.breadcrumb-item.active User - Dashboard
            .container-fluid
              .row
                .col-md-12.col-sm-12                  
                  // General Information
                  .card
                    .card-header
                      h4 Type of Technician & Experience
                    .card-body
                      .row
                        .col-sm-6
                          label Type of Technician *
                          select.wide.form-control.type-of-technician
                            option(data-display='Technician') Select Technician Type
                            option(value='1') Electrician
                            option(value='2') Mechanical
                        .col-sm-12
                          //  For Electrician
                          .row
                            .col-sm-4.elect-field.hide
                              label Electrician Technician Designation
                              select.wide.form-control
                                option(data-display='Designation') Select Employee
                                option(value='1') NCE (Novice Conveyor Electrician)
                                option(value='2') ACE (Appentice Conveyor Electrician)
                                option(value='3') JCE (Journeyman Conveyor Electrician)
                                option(value='4') Foreman
                                option(value='5') Super Foreman

                            .col-sm-4.mechan-field.hide
                              label Mechanical Technician Designation
                              select.wide.form-control
                                option(data-display='Designation') Select Employee
                                option(value='1') NCM (Novice Conveyor Milwright)
                                option(value='2') ACM (Appentice Conveyor Milwright)
                                option(value='3') JCM (Journeyman Conveyor Milwright)
                                option(value='4') Foreman
                                option(value='5') Super Foreman

                            .col-sm-4.m-clear.exp_type.hide
                              label Experience Level
                              select.wide.form-control
                                option(data-display='Experience') 0 To 6 Month
                                option(value='1') 1 Year
                                option(value='2') 2 Year
                            .col-sm-4.m-clear.exp_type.hide
                              label Project Trade
                              select.wide.form-control
                                option(data-display='Job Type') Full Time
                                option(value='1') Part Time
                            .col-sm-4.m-clear.exp_type.hide
                              label Expect Package
                              select.wide.form-control
                                option(data-display='Package') 2,00000 CTC
                                option(value='1') 3,00000 CTC
                                option(value='2') 4,00000 CTC                          
                  // Type of Technician
                  .card.exp_type.hide
                    .card-header
                      h4 Skills
                    .card-body
                      .extra-field-box
                        .multi-box
                          .dublicat-box
                            .row                          
                              // Electrician Skill
                              .col-sm-12
                                .row
                                  .col-sm-12.col-md-12.form-group.elect-field
                                      label Skills
                                      select.multiple-skill.form-control(name='skills[]', multiple='multiple')
                                        option Electical Skill
                                        option Termination
                                        option Wire Pulling
                                        option Creating Pull Sheets
                                        option Wire Terminations
                                        option Blueprints and Schematic Interprtation
                                        option Networking and Communications (check all that apply)
                                        option Ethernet
                                        option Fiber Optics
                                        option Pipe Bending
                                        option Hydraulic
                                        option Hand Benders
                                        option Programming Logic Controllers
                                        option ASI(Actuator Sensor Interface)
                                        option Traditional I/O Control Wiring and Circuitry  
                                        option AC Circuitry / High Voltage  
                                        option AC Circuitry / Low Voltage  
                                        option Residential  
                                        option Commercial  
                                        option Industrial  
                                        option Extra
                                        option Welding  
                                        option Carpentry                                        
                                  .col-sm-12.col-md-12.form-group.mechan-field.hide
                                      label Skills
                                      select.multiple-skill.form-control(name='skills[]', multiple='multiple')
                                        option Electical Skill
                                        option Termination
                                        option Wire Pulling
                                        option Creating Pull Sheets
                                        option Wire Terminations
                                        option Blueprints and Schematic Interprtation
                                        option Networking and Communications (check all that apply)
                                        option Ethernet
                                        option Fiber Optics
                                        option Pipe Bending
                                        option Hydraulic
                                        option Hand Benders
                                        option Programming Logic Controllers
                                        option ASI(Actuator Sensor Interface)
                                        option Traditional I/O Control Wiring and Circuitry  
                                        option AC Circuitry / High Voltage  
                                        option AC Circuitry / Low Voltage  
                                        option Residential  
                                        option Commercial  
                                        option Industrial  
                                        option Extra
                                        option Welding  
                                        option Carpentry
                              //- .col-sm-12.form-group
                              //-   label Career
                              //-   textarea#career.form-control.height-120.textarea(placeholder='Career')
                              .col-sm-6
                                label Min Rating
                                input.form-control(type="text")
                              .col-sm-6
                                label Max Hourly
                                input.form-control(type="text")
                              .col-sm-12
                                label Max Distance
                                .row
                                  .col-sm-4
                                    //- label Local
                                    input.form-control(type="text", placeholder="Local") 
                                  .col-sm-4
                                    //- label Statewide
                                    input.form-control(type="text", placeholder="Statewide")
                                  .col-sm-4
                                    //- label CountryWide
                                    input.form-control(type="text", placeholder="Countrywide")

                              .col-sm-6
                                label Include California
                                input.form-control(type="text")
                              .col-sm-6
                                label Max Cost ForeCast Calculation
                                input.form-control(type="text")
                              .col-sm-6
                                label Start Date
                                input.form-control(type='text', data-toggle='datepicker')
                              .col-sm-6
                                label End Date
                                input.form-control(type='text', data-toggle='datepicker')              
                  .text-right
                    button.btn.btn-m.btn-success(type='submit') Submit & Exit

