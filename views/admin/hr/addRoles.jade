extends ./../../layout/hr-layout
block content
      #page-wrapper
            .row.page-titles
                .col-md-5.align-self-center
                    h3.text-themecolor Hr
                .col-md-7.align-self-center
                    ol.breadcrumb
                        li.breadcrumb-item.active Add New Roles 
            .container-fluid
              .row
                .col-md-12.col-sm-12
                form#newSiteForm(accept-charset='utf-8', method='post', name='loginForm', action='/admin/hr/addRoles')
                  // General Information
                  -if(messages.msg_error)
                      each error in messages.msg_error
                        .alert.alert-danger #{error}
                  -else if(messages.msg_info)
                    .alert.alert-success #{messages.msg_info}
                  .card
                    .card-header
                      h4 Role Details 
                    .card-body
                      .row
                        .col-md-12
                          .row
                            .col-sm-4
                              label Name 
                                span.text-danger  *
                              input.form-control(type='text', name='type_name', required)
                            .col-sm-8
                              label Description Of Role
                              textarea#description.form-control.height-120.textarea(placeholder='About Jobs', name='description', minlength='5')
                
                        .col-sm-12
                          .text-right
                            button.btn.btn-success(type='submit') Submit & Exit

        

        
