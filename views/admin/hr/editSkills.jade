extends ./../../layout/hr-layout

block content
			#page-wrapper
				.row.page-titles
					.col-md-5.align-self-center
						h3.text-themecolor Hr
					.col-md-7.align-self-center
						ol.breadcrumb
							li.breadcrumb-item.active Update Skills
				.container-fluid
					.row
						.col-md-12.col-sm-12
							each value in skills
								form#newSiteForm(accept-charset='utf-8', method='post', name='loginForm', action='/admin/hr/editSkills/#{value.id}')
									// General Information
									.card
										.card-header
											h4 Added Skills
										.card-body
											.row
												.col-md-12
													.row
														.col-sm-6
															label Project Trade
															select.wide.form-control(id='job_type_id', name='type_name', required, readonly)
																//- option(data-display='Job Type') Select Project Trade
																option(value=value.id) #{value.type_name}
														.col-sm-6
															label Skill Name
															input.form-control(type='text', name='skill_name', value=value.skill_name, required)
													.row
														.col-sm-12
															label Description Of Skill
															textarea#description.form-control.height-120.textarea(placeholder='About Jobs', name='description', minlength='5') #{value.description}

														.col-md-12
															.text-right
																button.btn.btn-success(type='submit') Submit & Exit

