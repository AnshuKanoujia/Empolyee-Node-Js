extends layout/login-layout

block content
    section.login-screen-sec
        .container
            .login-screen
                a(href='/')
                    img.img-responsive(src='./../images/logo.png', alt='')
                form#userResetForm(accept-charset='utf-8', method='post', name='userResetForm', action='/reset-password/#{resetCode}')
                    -if(messages.msg_error)
                        .alert.alert-danger #{messages.msg_error}
                    -else if(messages.msg_info)
                        .alert.alert-success #{messages.msg_info}
                    input.form-control(type='password', placeholder='New password' name='newPassword' required)
                    input.form-control(type='password', placeholder='Confirm New Pssword' name='confirmPassword' required)
                    button.btn.btn-login(type='submit') Reset Pssword
